<div class="slide four">
    <section class="center-form">
        <h2 id="title-form">Contactez-moi</h2>
        <form class="form-contact" id="contactForm">

            <label for="name">Nom · 姓名</label>
            <input type="text" id="name" required placeholder="Enter your name">

            <label for="email">Email · 电子邮件</label>
            <input type="email" id="email" required placeholder="Enter your email">

            <label for="message">Message · 信息</label>
            <textarea id="message" required placeholder="Enter your message"></textarea>

            <div class="btn-contact">
                <button type="submit">Envoyer</button>
            </div>
            
        </form>
    </section>
</div>
