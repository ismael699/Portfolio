{% for flash in app.flashes('error') %}
<div class="flash-grand-parent">
    <div class="flash-parent">
        <div class="d-flex flash-enfant">
            <svg id="svg-error-flash" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" /></svg>              
            <p>{{flash}}</p>
        </div>
    </div>
</div>
{% endfor %}

